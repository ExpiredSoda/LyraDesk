<UserControl
    x:Class="LyraDesk.App.Views.NavigationPanel.NavigationPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LyraDesk.App.Views.NavigationPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding NavigationWidth}" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <!--  Navigation Panel  -->
        <StackPanel Grid.Column="0" Background="{StaticResource NavigationBackgroundBrush}">
            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Text="Navigation" />
            <Button
                Margin="5"
                Content="Dashboard"
                Style="{StaticResource NavigationButton}" />
            <Button
                Margin="5"
                Content="Intake"
                Style="{StaticResource NavigationButton}" />
            <Button
                Margin="5"
                Content="Case Search"
                Style="{StaticResource NavigationButton}" />
            <Button
                Margin="5"
                Content="Follow-Ups"
                Style="{StaticResource NavigationButton}" />
            <Button
                Margin="5"
                Content="Calendar"
                Style="{StaticResource NavigationButton}" />
        </StackPanel>

        <!--  Toggle Button  -->
        <Button
            Grid.Column="1"
            Padding="5,0"
            Background="Transparent"
            BorderThickness="0"
            Command="{Binding ToggleNavigationCommand}"
            Content="{Binding ToggleButtonContent}"
            Cursor="Hand"
            FontSize="12"
            ToolTip="Toggle Navigation Panel">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource NavigationHoverBrush}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</UserControl>