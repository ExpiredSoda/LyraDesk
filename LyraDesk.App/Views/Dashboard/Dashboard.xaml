<UserControl
    x:Class="LyraDesk.App.Views.Dashboard.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LyraDesk.App.Views.Dashboard"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <!--  Inherits DataContext from MainWindow  -->

    <Grid>
        <!--  Background Image (bound to program's background)  -->
        <Grid.Background>
            <ImageBrush
                ImageSource="{Binding DashboardBackgroundImage}"
                Opacity="0.1"
                Stretch="UniformToFill" />
        </Grid.Background>

        <!--  Dashboard Content  -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header Section  -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="#333333"
                    Text="{Binding DashboardTitle}" />
                <TextBlock
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="#666666"
                    Text="{Binding DashboardSubtitle}" />
            </StackPanel>

            <!--  Cards Section  -->
            <Grid Grid.Row="1" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Total Cases Card  -->
                <Border
                    Grid.Column="0"
                    Padding="20"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="10"
                            Direction="270"
                            Opacity="0.2"
                            ShadowDepth="2"
                            Color="Black" />
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="#666666"
                            Text="Total Cases" />
                        <TextBlock
                            Margin="0,10,0,0"
                            FontSize="48"
                            FontWeight="Bold"
                            Foreground="#2196F3"
                            Text="{Binding TotalCases}" />
                        <TextBlock
                            Margin="0,5,0,0"
                            FontSize="12"
                            Foreground="#999999"
                            Text="All Cases in the Program" />
                    </StackPanel>
                </Border>

                <!--  Open Cases Card  -->
                <Border
                    Grid.Column="2"
                    Padding="20"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="10"
                            Direction="270"
                            Opacity="0.2"
                            ShadowDepth="2"
                            Color="Black" />
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="#666666"
                            Text="Open Cases" />
                        <TextBlock
                            Margin="0,10,0,0"
                            FontSize="48"
                            FontWeight="Bold"
                            Foreground="#4CAF50"
                            Text="{Binding OpenCases}" />
                        <TextBlock
                            Margin="0,5,0,0"
                            FontSize="12"
                            Foreground="#999999"
                            Text="Currently Open Cases" />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>