<UserControl
    x:Class="LyraDesk.App.Views.StatusBar.StatusBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LyraDesk.App.Views.StatusBar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="Auto"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Bottom"
    mc:Ignorable="d">

    <!--  Inherits DataContext from MainWindow  -->
    
    <Border
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
        BorderThickness="0,1,0,0">
        <Grid Height="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Status Section  -->
            <StackPanel
                Grid.Column="0"
                Margin="5,0,10,0"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Text="Status: " />
                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="Green"
                    Text="{Binding Status}" />

            </StackPanel>

            <!--  Spacer (takes remaining space)  -->

            <Border Grid.Column="1" />

            <!--  Program Section  -->

            <StackPanel
                Grid.Column="2"
                Margin="10,0"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Text="Program: " />
                <TextBlock VerticalAlignment="Center" Text="{Binding SelectedProgram}" />
            </StackPanel>

            <!--  User Section  -->
            
            <StackPanel
                Grid.Column="3"
                Margin="10,0,5,0"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Text="User: " />
                <TextBlock VerticalAlignment="Center" Text="{Binding CurrentUser}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>