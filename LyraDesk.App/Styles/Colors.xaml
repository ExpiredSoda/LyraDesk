<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Primary Brand Colors  -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#00796B" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#009688" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#00695C" />
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF" />

    <!--  Secondary/Accent Colors  -->
    <SolidColorBrush x:Key="AccentBrush" Color="#4CAF50" />
    <SolidColorBrush x:Key="AccentLightBrush" Color="#66BB6A" />
    
    <!--  Semantic Colors  -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50" />
    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336" />
    <SolidColorBrush x:Key="InfoBrush" Color="#2196F3" />

    <!--  Neutral Colors  -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FAFAFA" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0" />
    
    <!--  Text Colors  -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#333333" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#666666" />
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#999999" />

    <!--  Navigation  -->
    <SolidColorBrush x:Key="NavigationBackgroundBrush" Color="#F5F5F5" />
    <SolidColorBrush x:Key="NavigationHoverBrush" Color="#EEEEEE" />
    
</ResourceDictionary>